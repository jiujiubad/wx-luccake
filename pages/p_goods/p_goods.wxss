@import "../../utils/p_search.wxss";/*循环商品-按一列或两列显示*/
/*轮播图*/
.goodsimgs{
  width: 100%;
  height: 750rpx;
}
.goodsimgs image{
  width: 100%;
  height: 750rpx;
}

/*描述+价格*/
.goods-info{
  display: flex;
  flex-direction: column;
  padding: 10px;
}
.goods-info-top{
  display: flex;
  flex-direction: row;
}
.goods-info-title{
  width: 88%;
}
.goods-info-t1{
  background-color: #E83D3B;
  color: #fff;
  height: 20px;
  line-height: 20px;
  padding: 0px 5px;
  border-radius: 3px;
  font-size: 25rpx;
  margin-right: 10px;
}
.goods-line{
  width: 1px;
  height: 30px;
  background-color: #bbb;
  margin-right: 10px;
  margin-left: 10px;
}
.goods-like{
  display: flex;
  flex-direction: column;
}
.goods-info-collect{
  font-size: 20rpx;
  color: #999;
}
.goods-info-des{
  color: #E83D3B;
  margin: 3px 0 10px;
}
.goods-price{
  color: #E83D3B;
}
.goods-price-1{
  margin-right: 5px;
}
.hr-lg{
  background-color: #F7F7F7;
  height: 15px;
  width: 100%;
}

/*规格*/
.select{
  display: flex;
  flex-direction: column;
  padding: 10px 0 10px 10px;
}
.select-tab{
  display: flex;
  flex-direction: row;
  padding-right: 10px;
}
.select-tab1{
  width: 80%;
  margin-bottom: 10px;
}
.select-tab2{
  width: 20%;
  text-align: right;
}
.hr{
  background-color: #eee;
  height: 2px;
  width: 100%;
}
.select-type{
  display: flex;
  flex-direction: row;
  margin: 15px 0;
}
.type0{
  font-size: 25rpx;
  color: #999;
  margin-right: 20px;
}
.type1{
  background-color: #E83D3B;
  padding: 3px 15px;
  color: #fff;
  border-radius: 3px;
}
.type2{
  background-color: #e9e9e9;
  opacity: 0.7;
  color: #333;
  padding: 3px 15px;
  border-radius: 3px;
  margin-left: 20px;
}
.select-quantity{
  display: flex;
  flex-direction: row;
  margin: 25px 0 10px;
}
.cut{
  padding: 2px 10px;
  border: 1px solid #999;
  font-size: 34rpx;
}
.count{
  border-top: 1px solid #999;
  border-bottom: 1px solid #999;
  padding: 2px 20px;
  font-size: 30rpx;
}
.add{
  padding: 2px 10px;
  border: 1px solid #999;
  font-size: 34rpx;
}

/*商品介绍*/
.detail-box{
  display: flex;
  flex-direction: column;
}
.detail-tab{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 10px 40px;
}
.detail-body{
  margin-top: 1rpx;
}

/*推荐商品*/
.ran{
  padding: 20px 20px;
  text-align: center;
}
.boxs-2{
  margin-bottom: 80px;
}

/*立即购买*/
.buy-box{
  display: flex;
  flex-direction: row;
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 48px;
  justify-content: space-between;
}
.buy-icon{
  display: flex;
  flex-direction: row;
  background-color: #fff;
  width: 20%;
  padding: 7px 15px;
  justify-content: space-between;
}
.buy-shop{
  display: flex;
  flex-direction: column;
}
.buy-shop-img{
  height: 21px;
}
.buy-shop-t{
  font-size: 20rpx;
  color: #999;
  height: 20px;
  line-height: 20px;
}
.buy-cart{
  display: flex;
  flex-direction: column;
  text-align: center;
}
.buy-cart-img{
  height: 21px;
}
.buy-cart-t{
  font-size: 20rpx;
  color: #999;
  height: 20px;
  line-height: 20px;
}
.buy-btn{
  display: flex;
  flex-direction: row;
  width: 80%;
}
.buy-add{
  background-color: #FD9500;
  color: #fff;
  width: 50%;
  text-align: center;
}
.buy-add-t{
  font-size: 34rpx;
  margin-top: 13px;
}
.buy-buy{
  background-color: #E83D3B;
  color: #fff;
  width: 50%;
  text-align: center;
}
.buy-buy-t{
  font-size: 34rpx;
  margin-top: 13px;
}
