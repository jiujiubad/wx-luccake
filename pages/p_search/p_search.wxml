<view class="search">
  <view class="searchBg">
    <view class="icon-s">
      <icon type="search" size="17"/>
    </view>
    <view>
      <input type="text" placeholder="搜索 99cake 商品" placeholder-class="holder" placeholder-style="color:#ccc;margin-left:5px;" bindinput="dropdown" bindconfirm="searchTitle" bindfocus="hideIcon" id="search" value="{{name}}" ></input>
    </view>
    <block wx:if="{{has_input != ''}}">
      <view class="icon-c">
        <icon type="clear" size="17" color="#bbb" bindtap="clearName"/>
      </view>
    </block>
  </view>
  <view class="btn" bindtap="resetSearch">取消</view>
</view>
<view class="hr"></view>

<block wx:if="{{result.length > 0}}"><!--如果能匹配到的搜索标题，显示系统推荐标题-->
  <block wx:for="{{result}}">
    <view class="item">
      <view class="name" bindtap="clickTitle" data-title="{{item}}">{{item}}</view>
      <view class="hr"></view>
    </view>
  </block>
</block>
<block wx:else>
  <block wx:if="{{cakes != ''}}"><!--当有拿到商品数据cakes时（可以是输入/点击搜索记录/点击热门搜索），显示商品-->
    <view class='tab'>
      <view class="{{currentTab==0?'select':'default'}}" data-id="0" bindtap='switchAll'>所有</view>
      <view class="{{currentTab==1?'select':'default'}}" data-id="1" bindtap='switchPrice'>价格</view>
      <view class="{{currentTab==2?'select':'default'}}" data-id="2" bindtap='switchTime'>时间</view>
      <view class="{{currentTab==3?'select':'default'}}" data-id="3" bindtap='switchTest'>筛选</view>
    </view>
    <view class="hr"></view>
    <scroll-view class='p_search-body' scroll-y>
      <navigator url='../p_goods/p_goods' wx:for="{{cakes}}" wx:key="">
        <view class='p_search-box'>
          <image src="{{item.photos[0].avatar.url}}"></image>
          <view class='p_search-post'>
            <text class='title2'>{{item.title}}</text>
            <text class='description'>{{item.description}}</text>
            <text class='price'>¥ {{item.price}}</text>
          </view>
        </view>
      </navigator>
    </scroll-view>
  </block>
  <block wx:else><!--如果没有商品数据，则显示初始的搜索页面，即搜索框+历史搜索+热门搜索-->
    <view class="hotSearch">
      <block wx:if="{{searchData != ''}}">
        <view class="title">
          <view class="left">历史搜索</view>
          <view class="right" bindtap="clearSearchData">清除</view>
        </view>
        <view class='tips'>
          <view wx:for="{{searchData}}">
            <view class='tip' wx:if="{{index<10}}" bindtap='clickSearchData' data-id="{{item.id}}" data-title="{{item}}">
              {{item}}
            </view>
          </view>
        </view>
      </block>
      <view class="title">
        <view class="left">热门搜索</view>
        <view class="right" bindtap="loadTips">换一批</view>
      </view>
      <view class="tips">
        <view wx:for="{{out}}" bindtap='clickTip' data-id="{{item.id}}" data-title="{{item.title}}">
          <view class="tip" >
            {{item.title}}
          </view>
        </view>
      </view>
    </view>
  </block>
</block>
