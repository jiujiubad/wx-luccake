.p_search-head{
  display: flex;
  flex-direction: row;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #eee;
}
.p_search-input{
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 570rpx;
  height: 70rpx;
  border-radius: 25rpx;
  background: #EEE;
  margin-left: 20rpx;
}
.p_search-input icon{
  padding: 10rpx 20rpx;
  height: 40rpx;
}
.p_search-head button{
  display: flex;
  align-items: center;
  background: red;
  color: #fff;
  margin-right: 20rpx;
}

.p_search-body{ 
}
.p_search-box{
  display: flex;
  padding: 20rpx;
  border-bottom: 2rpx solid #eee;
}
.p_search-box image{
  width: 250rpx;
  height: 250rpx;
  margin-right: 20rpx;
}
.p_search-post{
  flex: 1;
}
.p_search-post .title{
  border-radius: 5rpx;
  background: red;
  color: #fff;
  font-size: 25rpx;
  padding: 0 10rpx;
  margin-right: 20rpx;
}
.p_search-post .price{
  display: block;
  margin-top: 40rpx;
  color: red;
}
