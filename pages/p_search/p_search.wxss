.search{
  display: flex;
  flex-direction: row;
  padding: 5px;
}
.searchBg{
  background-color: #F7F7F7;
  border-radius: 15px;
  width: 80%;
  display: flex;
  flex-direction: row;
  height: 30px;
  line-height: 30px;
}
.icon-s{
  margin-left: 10px;
  margin-top: 4px;
}
.icon-c{
  margin-left: 70px;
  margin-top: 4px;
}
.search input{
  height: 30px;
  line-height: 30px;
  color: #666;
  margin-left: 5px;
}
.search text{
  color: red;
}
.clearBtn{
  margin-left: 60px;
}
.clearBtn view{
  background-color: #bbb;
  color: #fff;
  height: 20px;
  line-height: 20px;
  border-radius: 10px;
  padding: 0 6px;
  margin-top: 5px;
}
.holder{
  font-size: 13px;
}
.btn1{
  font-size: 14px;
  line-height: 30px;
  margin-left: 10px;
  border:1px solid #ddd;
  width:50px;
  text-align: center;
  background-color: #F7F7F7;
  border-radius: 3px;
  color: #666;
}
.btn2{
  background-color: red;
  border-color: red;
  color: #fff;
}
.hr{
  border:1px solid #cccccc;
  opacity: 0.2;
}
.title{
  display: flex;
  flex-direction: row;
  padding:10px;
}
.left{
  width: 80%;
  font-size: 15px;
}
.right{
  width:20%;
  font-size: 13px;
  color: #E4393C;
  text-align: right;
}
.tips{
  padding:10px;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.tip{
  background-color: #E8E8ED;
  padding-left: 10px;
  padding-right: 10px;
  height: 25px;
  line-height: 25px;
  border-radius: 3px;
  text-align: center;
  font-size: 13px;
  margin-right: 10px;
  margin-bottom: 10px;
}
.item{
  width: 100%;
  padding-left: 10px;
  padding-right: 10px;
  font-size: 15px;
  padding-top: 10px;
}
.name{
  margin-bottom: 10px;
}

.box1{
  display: flex;
  padding: 20rpx;
  border-bottom: 2rpx solid #eee;
}
.box1 image{
  width: 250rpx;
  height: 250rpx;
  margin-right: 20rpx;
}
.box1 .tap1{
  flex: 1;
}
.box1 .t1{
  border-radius: 5rpx;
  background: #EE2E34;
  color: #fff;
  font-size: 25rpx;
  padding: 0 5rpx;
  margin-right: 20rpx;
  float:left;
  height: 34rpx;
  line-height: 34rpx;
}
.box1 .t3{
  display: block;
  margin-top: 40rpx;
  color: red;
}
.boxs-2{
  display: flex;
  flex-flow: row wrap;
  justify-content: space-between;
}
.box2{
  width:49%; /*非常重要的值，没有就不会显示两列*/
  margin-bottom: 1%;
  border: 1rpx solid #e9e9e9;
}
.box2 image{
  width:100%;
  height: 330rpx;
}
.box2 .tap2{
  padding: 10px;
}
.box2 .t1{
  border-radius: 5rpx;
  background: #EE2E34;
  color: #fff;
  font-size: 25rpx;
  padding: 0 5rpx;
  margin-right: 20rpx;
  float:left;
  height: 34rpx;
  line-height: 34rpx;
}
.box2 .t3{
  display: block;
  margin-top: 20rpx;
  color: red;
}

.tab{
  clear: both;
  display: flex;
  flex-direction: row;
}
.tab view{
  height: 80rpx;
  line-height: 80rpx;
  margin: 0 auto;
  padding: 0 60rpx;
}
.select{
  border-bottom: 2rpx solid red;
}
.row1 image{
  width: 25px;
  height: 25px;
  margin-top: 8px;
}
