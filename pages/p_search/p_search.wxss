/*商品导航-按所有、价格、时间排序*/
.tab{
  clear: both;
  display: flex;
  flex-direction: row;
}
.common1{
  height: 80rpx;
  line-height: 80rpx;
  margin: 0 auto;
  padding: 0 40rpx;
}
.select{
  color: #E83D3B;
}
.price{
  display: flex;
  flex-direction: row;
}
.img-pri{
  display: flex;
  flex-direction: column;
  margin-top: -5px;
  margin-left: 5px;
}
.img-pri .img1{
  font-size: 10px;
}
.img-pri .img2{
  font-size: 10px;
  margin-top: -30px;
}
.up{
  color: #E83D3B;
}
.down{
  color: #E83D3B;
}
.ping{
  color: #666;
}
.row1 image{
  width: 25px;
  height: 25px;
  margin-top: 8px;
}
