.Box-welcome {
  display: flex;
  flex-flow: row wrap;
  justify-content: space-between;
  padding:1%;
}

/*轮播大图*/
.box-intro {
  height: 400rpx;
  width: 100%; /*非常重要的值，没有就不会显示轮播*/
}
.box-intro image {
  width: 100%;
}
.box-search icon {
  margin-right: 40rpx;
}

/*搜索框*/
.box-search {
  width: 100%;
  text-align: center;
}
.box-search input {
  padding: 20rpx;
}

/*产品展示*/
.box-product {
  width:49%; /*非常重要的值，没有就不会显示两列*/
  margin-top:1%;
  text-align:center;
  border: 1rpx solid #e8e8e8;
}
.box-product image {
  width:100%;
  height: 330rpx;
}
.product-text2 {
  color: #888;
  font-size: 25rpx;
}
