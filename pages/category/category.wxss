@import "../../utils/p_search.wxss";
/*搜索框*/
.search{
  display: flex;
  flex-direction: row;
  padding: 5px;
}
.searchBg{
  background-color: #F7F7F7;
  border-radius: 15px;
  width: 95%;
  display: flex;
  flex-direction: row;
  height: 30px;
  line-height: 30px;
  margin: 0 auto;
}
.icon_t{
  display: flex;
  flex-direction: row;
  margin: 0 auto;
}
.icon_t icon{
  margin-top: 7px;
  margin-right: 5px;
}
.icon_t text{
  color: #ccc;
  font-size: 25rpx;
}
.hr{
  border-bottom: 0.1rpx solid #666;
  opacity: 0.2;
}
/*分类共用*/
.category {
  flex: 1;
  width: 100%;
  background: #fff;
  display: flex;
  border-top: 1px solid #fafafa;
}
/*左侧分类标题*/
.category .left {
  width: 162rpx;
  height: 100%;
}
.category .left .item {
  text-align: center;
  line-height: 90rpx;
  width: 162rpx;
  height: 90rpx;
  color: #666;
  font-size: 28rpx;
  border-left: 6rpx solid #fff;
}
.category .left .item.active {
  color: #E83D3B;
  font-size: 36rpx;
  border-left: 6rpx solid #E83D3B;
}


/*右侧分类标题*/
.category .right {
  border-left: 1px solid #fafafa;
  flex: 1;
  height: 100%;
  padding: 0 30rpx 0 30rpx;
}
.banner {
  display: block;
  height: 222rpx;
  width: 100%;
  position: relative;
}
.banner image {
  position: absolute;
  top: 30rpx;
  left: 0;
  border-radius: 4rpx;
  height: 192rpx;
  width: 100%;
}
.banner text {
  position: absolute;
  top: 30rpx;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
  left: 0;
  height: 192rpx;
  line-height: 192rpx;
  width: 100%;
}
.category .hd {
  height: 108rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.category .hd .txt {
  font-size: 24rpx;
  text-align: center;
  color: #333;
  padding: 0 10rpx;
  width: auto;
}
.category .hd .line {
  width: 40rpx;
  height: 1px;
  background: #d9d9d9;
}
.category .bd {
  height: auto;
  width: 100%;
}
.category .bd .item {
  display: block;
  float: left;
  height: 220rpx;
  width: 29%;
  margin-right: 30rpx;
}
.category .bd .item.last {
  margin-right: 0;
}
.category .bd .item image {
  height: 65%;
  width: 100%;
}
.category .bd .item text {
  display: block;
  text-align: center;
  font-size: 24rpx;
  height: 72rpx;
  width: 144rpx;
}
