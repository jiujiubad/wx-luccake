/*搜索框*/
.search {
  height: 88rpx;
  padding: 0 30rpx;
  display: flex;
  align-items: center;
}
.search .input {
  width: 690rpx;
  height: 56rpx;
  background: #ededed;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.search image {
  background: url(http://yanxuan.nosdn.127.net/hxm/yanxuan-wap/p/20161201/style/img/icon-normal/search2-2fb94833aa.png) center no-repeat;
  background-size: 100%;
  width: 28rpx;
  height: 28rpx;
}
.search text {
  color: #888;
  padding-left: 10rpx;
  font-size: 30rpx;
}

/*分类共用*/
.category {
  flex: 1;
  width: 100%;
  background: #fff;
  display: flex;
  border-top: 1px solid #fafafa;
}
/*左侧分类标题*/
.category .left {
  width: 162rpx;
  height: 100%;
}
.category .left .item {
  text-align: center;
  line-height: 90rpx;
  width: 162rpx;
  height: 90rpx;
  color: #666;
  font-size: 28rpx;
  border-left: 6rpx solid #fff;
}
.category .left .item.active {
  color: #ab2b2b;
  font-size: 36rpx;
  border-left: 6rpx solid #ab2b2b;
}


/*右侧分类标题*/
.category .right {
  border-left: 1px solid #fafafa;
  flex: 1;
  height: 100%;
  padding: 0 30rpx 0 30rpx;
}
.banner {
  display: block;
  height: 222rpx;
  width: 100%;
  position: relative;
}
.banner image {
  position: absolute;
  top: 30rpx;
  left: 0;
  border-radius: 4rpx;
  height: 192rpx;
  width: 100%;
}
.banner text {
  position: absolute;
  top: 30rpx;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
  left: 0;
  height: 192rpx;
  line-height: 192rpx;
  width: 100%;
}
.category .hd {
  height: 108rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.category .hd .txt {
  font-size: 24rpx;
  text-align: center;
  color: #333;
  padding: 0 10rpx;
  width: auto;
}
.category .hd .line {
  width: 40rpx;
  height: 1px;
  background: #d9d9d9;
}
.category .bd {
  height: auto;
  width: 100%;
}
.category .bd .item {
  display: block;
  float: left;
  height: 220rpx;
  width: 29.6%;
  margin-right: 30rpx;
}
.category .bd .item.last {
  margin-right: 0;
}
.category .bd .item image {
  height: 65%;
  width: 100%;
}
.category .bd .item text {
  display: block;
  text-align: center;
  font-size: 24rpx;
  height: 72rpx;
  width: 144rpx;
}
