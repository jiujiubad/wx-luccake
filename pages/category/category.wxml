<view class='container'>
  <view class='search'>
    <navigator url="/pages/search/search" class="input">
      <image></image>
      <text>商品搜索, 共xxx款好物</text>
    </navigator>
  </view>
  <view class='category'>
    <scroll-view class='left' scroll-y="true">
      <view class="item {{left_id==item.id? 'active':''}}" wx:for="{{navLeftList}}" wx:key="" bindtap='switch_right' data-id="{{item.id}}" data-index="{{index}}">
        {{item.name}}
      </view>
    </scroll-view>

    <scroll-view class='right' scroll-y="true">
      <navigator url="url" class="banner">
        <image src="{{navRightList[curIndex].image.medium.url}}"></image>
        <text>{{navRightList[curIndex].title}}</text>
      </navigator>
      <view class="hd">
        <text class="line"></text>
        <text class="txt">{{navRightList[curIndex].name}}</text>
        <text class="line"></text>
      </view>
      <view class="bd" wx:if="{{navRightList[curIndex].products}}">
        <navigator class="item {{(index+1)%3==0? 'last':''}}" url="../goods/goods?id={{item.id}}" wx:for="{{navRightList[curIndex].products}}" wx:key="">
          <image src="{{item.image.url}}"></image>
          <text>{{item.title}}</text>
        </navigator>
      </view>
    </scroll-view>
  </view>
</view>
